{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-wrap -mx-2" id="books">
        {% for book in books %}
            <div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
                <div class="rounded shadow-md h-full">
                    <a href="#">
                        <img class="w-full m-0 rounded-t lazy"
                             src="{{ asset('images/noimage.svg') }}"
                             width="960" height="500"
                             alt="This post thumbnail"
                        >
                    </a>

                    <div class="px-6 py-5">
                        <div class="font-semibold text-lg mb-2">
                            <a class="text-slate-900 hover:text-slate-700" href="#">{{ book.title }}</a>
                        </div>
                        <p class="text-slate-700 mb-1" title="Published date">{{ book.author }}</p>
                        <p class="text-slate-800">{{ book.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

